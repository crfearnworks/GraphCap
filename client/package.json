		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.12.0",
		"mime-types": "^2.1.35",
		"pg": "^8.13.1",
		"postgres": "^3.4.5",
		"prettier": "^3.4.1",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"sharp": "^0.33.5",
		"svelte": "^5.2.10",
		"svelte-check": "^4.1.0",
		"svelte-sonner": "^0.3.28",
		"sveltekit-superforms": "^2.20.1",
		"tailwindcss": "^3.4.15",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0",
		"vite": "^5.4.11",
		"vitest": "^2.1.6",
		"zod": "^3.23.8"
	},
