		"@sveltejs/vite-plugin-svelte": "^4.0.2",
		"@types/eslint": "^9.6.1",
		"@types/mime-types": "^2.1.4",
		"@types/pg": "^8.11.10",
		"@types/sharp": "^0.32.0",
		"autoprefixer": "^10.4.20",
		"bits-ui": "1.0.0-next.64",
		"dotenv": "^16.4.5",
		"dotenv-expand": "^12.0.1",
		"drizzle-kit": "^0.28.1",
		"drizzle-orm": "^0.36.4",
		"drizzle-zod": "^0.5.1",
