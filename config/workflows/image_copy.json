{
    "id": "image_copy_workflow",
    "workflow_metadata": {
        "name": "Image Copy Workflow",
        "description": "Load and copy images with sampling and structure preservation",
        "version": "0.1.0"
    },
    "nodes": [
        {
            "id": "image_loader",
            "type": "ImageSamplingNode",
            "config": {
                "path": "/workspace/datasets/os_img",
                "sample_size": 10,
                "sample_method": "random"
            },
            "dependencies": []
        },
        {
            "id": "image_copier",
            "type": "CopyImagesNode",
            "config": {
                "target_dir": "/workspace/.local/output/image_copies",
                "preserve_structure": true
            },
            "dependencies": ["image_loader"]
        },
        {
            "id": "dag_viz",
            "type": "DAGVisualizerNode",
            "config": {
                "output_dir": "/workspace/.local/output/image_copies",
                "format": "png",
                "layout": "layered",
                "style": {
                    "node_color": "#F5F9FF",
                    "edge_color": "#666666",
                    "font_size": 14,
                    "width": 12,
                    "height": 8,
                    "arrows": true,
                    "arrowsize": 20,
                    "with_labels": true,
                    "font_weight": "bold",
                    "edge_width": 2,
                    "node_spacing": 1.5,
                    "margin": 0.4
                }
            },
            "dependencies": ["image_copier"]
        }
    ]
}